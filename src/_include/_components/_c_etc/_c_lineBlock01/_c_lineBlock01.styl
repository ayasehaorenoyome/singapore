
.l-contentsBody
	height 100vh
	position relative

.c-lineBlock
	max-width 370px
	max-height 768px
	width 48vh
	height 100vh
	position absolute
	top 50%
	right 0
	left 0
	margin 0 auto
	transform translate3d(0,-50%,0)
	filter drop-shadow(20px 10px 15px rgba(0,0,0,0.7))
	+MQ_SP(450px)
		max-width 100%
		max-height 100%
		width 100%
		height 100%
		position static
		transform none
	
	&:after
		content ''
		display inline-block
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		margin auto
		width 100%
		height 0
		padding-top 207.5%
		background-image url('../images/phone8.png')
		background-repeat no-repeat
		background-size contain
		pointer-events none
	+MQ_SP(450px)
		width 100%
		height 100%
		position fixed
		top 0
		&:after
			display none
	>.inner
		width 100%
		height 100%
		&:before,&:after
			content ''
			display inline-block
			position absolute
			+MQ_SP(450px)
				display none
		&:before
			width 190%
			height 105%
			background-image url(../images/hand01.png)
			background-repeat no-repeat
			background-size contain
			right -117%
			bottom -20%
		&:after
			width 38%
			height 70%
			background-image url(../images/hend02.png)
			background-repeat no-repeat
			background-size contain
			left -27%
			top 14%
			z-index 10


			
	.block
		&.contents
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			margin auto
			transform translate3d(0,-2px,0)
			width 88%
			max-width 350px
			height 75%
			max-height 580px
			overflow hidden
			&:after
				content ''
				display inline-block
				width 380px
				height 380px
				position absolute
				top -32%
				left -70%
				background-color rgba(255,255,255,0.07)
				transform-origin center
				transform rotate(38deg)
				pointer-events none
				+MQ_SP(450px)
					display none
			+MQ_SP(450px)
				position static
				max-width 100%
				max-height 100%
				width 100%
				height 100%
				transform none
	.area
		box-sizing border-box
		&.header
			width 100%
			height 64px
			color #fff
			background-color #222a41
			+MQ_SP(450px)
				height 45px
			.upper
				display flex
				justify-content space-between
				position relative
				width 100%
				padding 4px 7px 0
				height calc(100% - 45px)
				box-sizing border-box
				+MQ_SP(450px)
					display none
				.career
					display flex
					align-items center
					fontSize(10)
					p
						padding 0 4px
					.radio
						display flex
						justify-content space-between
						align-items flex-end
						margin-right 4px
						width 16px
						height 10px
						span
							width 3px
							background-color #fff
							border-radius 1px
							&:nth-child(1)
								height 4px
							&:nth-child(2)
								height 6px
							&:nth-child(3)
								height 8px
							&:nth-child(4)
								height 10px
				.clock
					position absolute
					width calc(100% - 14px)
					height 100%
					fontSize(10)
					text-align center
					box-sizing border-box
				.battery
					display flex
					align-items center
					fontSize(10)
					&:after
						content ''
						display inline-block
						margin-left 4px
						width 24px
						height 12px
						background-image url('../images/battery.png')
						background-repeat no-repeat
						background-position center
						background-size contain

			.nameBlock
				display flex
				justify-content space-between
				align-items center
				padding 0 20px
				width 100%
				height 45px
				box-sizing border-box
				.col
					display flex
					align-items center
					width 50%
					&:last-child
						justify-content space-between
						width 60px
					.btn
						display inline-block
						position relative
						margin-right 25px
						width 10px
						height 20px
						&:before
							content ''
							display inline-block
							transform rotate(-45deg)
							position absolute
							top 0
							bottom 0
							left 0
							margin auto 0
							width 15px
							height 15px
							border solid #fff
							border-width 2px 0 0 2px
					.name
						fontSize(16)
						font-weight bold
					.tel
						width 24px
						height 24px
						&:before
							fontIconSet("\EA10")
							display inline-block
							color #fff
							fontSize(24)
					.menu
						display flex
						flex-direction column
						justify-content space-between
						width 17px
						height 13px
						span
							display inline-block
							width 100%
							height 1px
							background-color #fff
		&.body
			width 100%
			height calc(100% - (64px + 50px))
			background-image url('../images/line_bg.jpg')
			background-size cover
			overflow hidden
			+MQ_SP(450px)
				height calc(100% - (45px + 50px))
			.inner
				display flex
				flex-direction column
				.message
					margin-bottom 7px
					&:last-child
						margin-bottom 0
					span
						display inline-block
						box-sizing border-box
						&.text
							position relative
							padding 9px 12px
							fontSize(12)
							line-height 1.3
							border-radius 15px
							white-space normal
							word-break break-word
							&:before
								content ''
								display inline-block
								position absolute
								top 0
								background-repeat no-repeat
								background-size contain
						&.time
							align-self flex-end
							color #fff
							fontSize(10)
							text-align center
					&.is-bot
						display flex
						max-width 270px
						.icon
							width 33px
							height 33px
							margin-right 10px
							background-image url('../images/icon.png')
							background-size cover
							border-radius 50%
						.text,.img
							margin-right 5px
							max-width 200px
							
						.img
							border-radius 10px
							overflow hidden
							img
								width 100%
								height auto
						
						.text
							background-color #fff
							&:before
								left -6px
								width 12px
								height 10px
								background-image url('../images/message_before01.png')
						
							
					&.is-submit
						display flex
						justify-content space-between
						align-items flex-end
						align-self flex-end
						max-width 250px
						.timeBlock
							display flex
							flex-direction column
							align-items center
							justify-content center
						.read
							color #fff
							fontSize(10)
							text-align center
						.time
							margin-right 5px
						.text
							max-width 220px
							background-color #8ddb67
							&:before
								right -6px
								width 12px
								height 10px
								background-image url('../images/message_before02.png')

			.mCSB_inside > .mCSB_container
				padding 5px 8px 5px 5px
				margin-right 0
			.mCSB_draggerRail
				opacity 0
			.mCSB_dragger_bar
				background-color #222
				opacity 0.4
		&.input
			display flex
			justify-content space-between
			align-items center
			width 100%
			height 50px
			padding 5px 14px
			background-color #fff
			.col
				position relative
				margin-left 5px
				&:first-child
					margin-left 0
				&.plus
					width 20px
					height 20px
					&:before,&:after
						content ''
						display inline-block
						position absolute
						top 0
						right 0
						bottom 0
						left 0
						margin auto
						background-color #222a41
					&:before
						width 100%
						height 2px
					&:after
						width 2px
						height 100%
				&.camera
					width 24px
					height 24px
					&:before
						fontIconSet("\EA11")
						display inline-block
						color #222a41
						fontSize(24)
				&.graphic
					width 24px
					height 24px
					&:before
						fontIconSet("\EA12")
						display inline-block
						color #222a41
						fontSize(24)
				&.input
					position relative 
					height 36px
					overflow hidden
					border 1px solid #dedede
					border-radius 50px
					&:after
						fontIconSet("\EA13")
						display inline-block
						position absolute
						top 50%
						right 6px
						transform translate3d(0,-50%,0)
						color #222a41
						fontSize(24)
					textarea
						width calc(100% + 20px)
						height 100%
						padding 6px 50px 6px 6px
						background-color #f5f5f5
						box-sizing border-box
						overflow auto
				&.arrow
					display inline-block
					position relative
					width 24px
					height 24px
					background-color #222a41
					border-radius 5px
					&:after
						content ''
						display inline-block
						width 7px
						height 7px
						position absolute
						top 50%
						left 50%
						transform translate3d(-60%, -50% ,0) rotate(45deg)
						border solid #fff
						border-width 2px 2px 0 0

				&.mike
					width 24px
					height 24px
					&:before
						fontIconSet("\EA14")
						display inline-block
						color #222a41
						fontSize(24)
				&.submit
					width 24px
					height 24px
					cursor pointer
					&:before
						fontIconSet("\EA15")
						display inline-block
						color #178AFF
						fontSize(26)